---
const feats = await Astro.glob('../blocks/feats/*.md')
const { label } = Astro.props
---

<div class="feat">
    <h3>{ label }</h3>
    <blockquote>
        <p>
            {
                feats.find((feat) => (
                    feat.frontmatter.title === label
                ))?.rawContent()
            }
        </p>
    </blockquote>
</div>

<style>
    .feat {
        margin-bottom: 10px;
        box-shadow: rgb(0 0 0 / 14%) 0px 1px 1px 0px, rgb(0 0 0 / 12%) 0px 1px 3px 0px;
    }
</style>