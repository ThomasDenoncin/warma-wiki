---
import AbilitiesList from "./AbilitiesList.astro";
import Advantages from "./Advantages.astro";
import Stats from "./Stats.astro";

const { infos } = Astro.props
---

<div class="weapon">
    <header>
        <h3>{ infos.name } - { infos.type.toUpperCase() }</h3>
        <div class="stats">
            <Stats
                stats = { infos.stats }
            />
        </div>
        { 
            infos.qualities &&
            <div class="qualities">
                <Advantages 
                    labels = { infos.qualities }
                />
            </div>
        }
    </header>
    { 
        infos.abilities &&
        <AbilitiesList
            labels = { infos.abilities }
        />
    }
</div>

<style>
    .weapon {
        margin-bottom: 10px;
        box-shadow: rgb(0 0 0 / 14%) 0px 1px 1px 0px, rgb(0 0 0 / 12%) 0px 1px 3px 0px;
    }

    header {
        display: flex;
        align-items: center;
        flex-wrap: wrap;
    }
    header > h3 {
        flex-grow: 1;
    }
    header table {
        width: auto;
        padding: 10px 20px;
    }

    th {
        font-weight: normal;
        font-size: .8em;
        text-transform: uppercase;
    }

    .qualities {
        flex-basis: 100%;
        margin: 0 20px 10px;
        text-align: right;
    }
</style>